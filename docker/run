export MODEL_PATH='./models'

docker run -it \
      --name=llamacpp \
      --privileged --network=host \
      --device=/dev/kfd --device=/dev/dri \
      --group-add video --cap-add=SYS_PTRACE \
      --security-opt seccomp=unconfined \
      --ipc=host --shm-size 16G \
      -v $MODEL_PATH:/data \
      -v ./scripts/:/scripts/ \
      rocm/dev-ubuntu-24.04:6.4-complete
